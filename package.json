{
  "name": "quizzes",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:api": "pnpm --filter api start:dev",
    "dev:ui": "pnpm --filter ui dev",
    "build:api": "pnpm --filter api build",
    "build:ui": "pnpm --filter ui build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest run --project ui",
    "test:ui:watch": "vitest --project ui",
    "test:api": "vitest run --project api",
    "test:api:watch": "vitest --project api",
    "test:packages": "vitest run --project shared-models --project shared-types --project shared-utils",
    "test:packages:watch": "vitest --project shared-models --project shared-types --project shared-utils",
    "test:coverage": "vitest run --coverage",
    "test:vitest-ui": "vitest --ui",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,css,html}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,css,html}\"",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "typecheck": "pnpm run -r typecheck",
    "typecheck:sequential": "pnpm run typecheck:api && pnpm run typecheck:ui && pnpm run typecheck:packages",
    "typecheck:api": "pnpm --filter api typecheck",
    "typecheck:ui": "pnpm --filter ui typecheck",
    "typecheck:packages": "pnpm run typecheck:shared-models && pnpm run typecheck:shared-types && pnpm run typecheck:shared-utils",
    "typecheck:shared-models": "pnpm --filter @quiz-app/shared-models typecheck",
    "typecheck:shared-types": "pnpm --filter @quiz-app/shared-types typecheck",
    "typecheck:shared-utils": "pnpm --filter @quiz-app/shared-utils typecheck"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.10.0",
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.6.0",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "@vitest/coverage-v8": "^4.0.5",
    "@vitest/ui": "^4.0.5",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.6",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vitest": "^4.0.5"
  }
}
